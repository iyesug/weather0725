<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    >

    <include layout="@layout/toobar"/>
<lecho.lib.hellocharts.view.LineChartView
    android:id="@+id/line_chart"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"

    android:layout_height="0dp"
    android:layout_weight="8" >
</lecho.lib.hellocharts.view.LineChartView>

<!--<View-->
    <!--android:layout_width="match_parent"-->

    <!--android:layout_height="2dp"-->
    <!--android:layout_marginBottom="5dp"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:background="@android:color/darker_gray" />-->

<lecho.lib.hellocharts.view.PreviewLineChartView
    android:id="@+id/chart_preview"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"

    android:layout_height="0dp"
    android:layout_weight="3" >
</lecho.lib.hellocharts.view.PreviewLineChartView>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@android:color/darker_gray" />-->


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"

            android:orientation="horizontal"


            >


        <TextView
                android:id="@+id/Temp"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="temp"
                android:text="气温"
                android:textColor="@color/main"
                />
        <TextView
                android:id="@+id/Press"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="press"
                android:text="气压"
                android:textColor="@color/main"
                />
        <TextView
                android:id="@+id/Visibility"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="visibility"
                android:text="能见"
                android:textColor="@color/main"
                />
        <TextView
                android:id="@+id/Humidity"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="humidity"
                android:text="湿度"
                android:textColor="@color/main"
                />
        <TextView
                android:id="@+id/Speed"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="speed"
                android:text="风速"
                android:textColor="@color/main"
                />
        <TextView
                android:id="@+id/Rainfall"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="rainfall"
                android:text="降雨"
                android:textColor="@color/main"
                />

        />
    </LinearLayout>

</LinearLayout>