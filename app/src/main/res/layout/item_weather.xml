<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"

            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_gravity="top"

            android:padding="2dp">


            <TextView
                android:id="@+id/t_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="晋安"
                android:textColor="?attr/colortext_s"
                android:textSize="20sp"
                android:typeface="monospace"
                android:layout_marginLeft="2dp"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/t_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="7月12日 周二"
                android:textColor="?attr/colortext_s"
                android:textSize="14sp"
                android:typeface="monospace"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom" />



            <!--<View  android:layout_height="2dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@drawable/shadow_top"-->
                <!--android:gravity="left"-->
                <!--android:layout_gravity="center_vertical" />-->


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"

            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="top"

            >

            <TextView
                android:id="@+id/t_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="晋安白天阵雨，最高气温32℃，夜间阴，最低气温26℃。"
                android:textColor="?attr/colortext"
                android:textSize="14sp"
                android:typeface="monospace"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"

                android:layout_gravity="bottom" />





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/t_temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="28"
                android:textColor="?attr/colortext"
                android:textSize="85sp"

                android:typeface="normal"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom" />
            <TextView
                android:id="@+id/t_temp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:text=".5 ℃"
                android:textColor="?attr/colortext"
                android:textSize="36sp"
                android:layout_gravity="bottom" />




        </LinearLayout>





        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
     >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left"
            android:orientation="vertical"
            >






                <TextView
                    android:id="@+id/id_textview_d1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="湿度:"
                    android:textColor="?attr/colortext"
                    android:textSize="13sp"
                    android:typeface="monospace"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/id_textview_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="风速:"
                android:textColor="?attr/colortext"
                android:textSize="13sp"
                android:typeface="monospace"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom" />


            <TextView
                android:id="@+id/id_textview_d5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="数据来源:"
                android:textColor="?attr/colortext"
                android:textSize="12sp"
                android:typeface="serif"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom" />


        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/t_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="75%"
                    android:textColor="?attr/colortext"
                    android:textSize="14sp"
                    android:layout_gravity="bottom" />




                <TextView
                    android:id="@+id/t_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="5.2m/s"
                    android:textColor="?attr/colortext"
                    android:textSize="14sp"
                    android:layout_gravity="bottom" />
                <TextView
                    android:id="@+id/t_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="晋安气象站"
                    android:textColor="?attr/colortext"
                    android:textSize="12sp"
                    android:layout_gravity="bottom" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="left"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/id_textview_d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="雨量:"
                    android:textColor="?attr/colortext"
                    android:textSize="13sp"
                    android:typeface="monospace"

                    android:layout_gravity="bottom" />



                <TextView
                    android:id="@+id/id_textview_d4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="能见度:"
                    android:textColor="?attr/colortext"
                    android:textSize="13sp"
                    android:typeface="monospace"

                    android:layout_gravity="bottom" />


                <TextView
                    android:id="@+id/id_textview_d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="更新时间:"
                    android:textColor="?attr/colortext"
                    android:textSize="12sp"
                    android:typeface="serif"

                    android:layout_gravity="bottom" />







            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/t_rain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="0mm"
                    android:textColor="?attr/colortext"
                    android:textSize="14sp"
                    android:layout_gravity="bottom" />
                <TextView
                    android:id="@+id/t_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="35000m"
                    android:textColor="?attr/colortext"
                    android:textSize="14sp"
                    android:layout_gravity="bottom" />








                <TextView
                    android:id="@+id/t_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="10:25"
                    android:textColor="?attr/colortext"
                    android:textSize="12sp"
                    android:layout_gravity="bottom" />




            <!--<View  android:layout_height="1px"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="?attr/colorline"-->
                <!--android:gravity="left"-->
                <!--android:layout_gravity="center_vertical" />-->








        </LinearLayout>





    </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            >



                <!--<ImageView-->
                    <!--android:id="@+id/id_imageview1"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@mipmap/station"-->
                    <!--/>-->
