<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >
<include layout="@layout/toobar"/>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="?attr/colortext_s"

        >

    <TextView
            android:id="@+id/id_textview_d6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="选择雷达站点与时间"
            android:textSize="20sp"
            android:singleLine="true"
            android:onClick="dropdown"
            android:layout_gravity="center" />
    <Button
            android:id="@+id/dropdown"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/drop_down_unselected_icon"
            android:layout_gravity="center"
            android:onClick="dropdown"
            android:padding="10dip"
            />

    />
</LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white">

        <!--  抽取所有的Viewpager布局-->
        <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <LinearLayout
                android:id="@+id/ll_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/viewPager"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" />
    </RelativeLayout>


<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"

        android:orientation="horizontal"


        >


    <ImageView
            android:id="@+id/move"
            android:layout_marginRight="1dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="play"
            android:src="@mipmap/play"
            android:scaleType="center"
            />
    <TextView
            android:id="@+id/distance"
            android:layout_marginRight="1dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="distance"
            android:text="测距"
            android:textColor="@color/main"
            />
    <TextView
            android:id="@+id/legend"
            android:layout_marginRight="1dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="move"
            android:text="图例"
            android:textColor="@color/main"
            />
    <TextView
            android:id="@+id/switch_type"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="setMapMode"
            android:text="地图切换"
            android:textColor="@color/main"
            />

    />
</LinearLayout>

</LinearLayout>