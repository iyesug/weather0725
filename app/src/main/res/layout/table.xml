<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toobar"/>

    <LinearLayout
            android:id="@+id/top"

            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="?attr/colortext_s"

            >

        <TextView
                android:id="@+id/id_textview_d6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="福州"
                android:textSize="20sp"
                android:singleLine="true"
                android:onClick="dropdown"
                android:layout_gravity="center" />
        <Button
                android:id="@+id/dropdown"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/drop_down_unselected_icon"
                android:layout_gravity="center"
                android:onClick="dropdown"
                android:padding="10dip"
                />

        />
    </LinearLayout>


    <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"


            >

        <com.inqbarna.tablefixheaders.TableFixHeaders
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/table"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal|vertical"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:id="@+id/bottom"

            android:orientation="horizontal"


            >



        <TextView
                android:id="@+id/distance"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="forecast"
                android:text="预报"
                android:textColor="@color/main"
                />

        <TextView
                android:id="@+id/legend"
                android:layout_marginRight="1dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="autoStation"
                android:text="实况"
                android:textColor="@color/main"
                />



        />
    </LinearLayout>
</LinearLayout>