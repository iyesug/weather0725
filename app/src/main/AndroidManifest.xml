<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vis.weather">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.BAIDU_LOCATION_SERVICE" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <!-- iBeancon功能所需权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- 浮动通知权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 自定义权限 -->
    <uses-permission android:name="getui.permission.GetuiService.com.vis.custom.customersmanage" />
    <!--替换为第三方应用的包名-->
    <permission
        android:name="getui.permission.GetuiService.com.vis.weather.customersmanage"
        android:protectionLevel="normal" >
    </permission><!--替换为第三方应用的包名-->

    <application
        android:name="com.vis.weather.util.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">



        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="MDlLGtO4kRf78gS8a51SS6L6DYCmwGea" />

        <activity android:name="com.vis.weather.SplashActivity" android:launchMode="singleTask" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.vis.weather.MainActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>

        <activity android:name="com.vis.weather.view.TodayActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.PhotoShowActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.RadarActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.QuanzhouDistrictSearch" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.baidu.location.service_v2.2" >
                </action>
            </intent-filter>
        </service>
        <activity android:name="com.vis.weather.view.LocationActivity" android:launchMode="singleTask"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.TyphoonActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.VideoFileActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.VideoViewActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.PLVideoTextureActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.SettingActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.Advice_Activity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.view.OceanActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.photolist.PhotoListActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.photolist.PhotoViewActivity" android:launchMode="singleTask" android:screenOrientation="portrait"/>
        <activity android:name="com.vis.weather.notification.NotificationListActivity" android:launchMode="singleTask" android:screenOrientation="portrait" />
        <activity android:name="com.vis.weather.popularization.PopularMainActivity" android:launchMode="singleTask" android:screenOrientation="portrait" />
        <!-- 配置第三方Receiver -->


    </application>

</manifest>